<main class="container flex-fill max-w-7xl mx-auto px-4">
    <h1 class="text-3xl font-semibold text-center mt-4 mb-6">AdministraciÃ³n de Preguntas</h1>

    <aside class="my-5 flex items-center justify-end space-x-4">
        <div>
            <a href="/pregunta">
                <button class="btn btn-primary bg-gradient-to-r from-primary to-primary-focus hover:bg-gradient-to-r hover:from-primary-focus hover:to-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    Nueva pregunta
                </button>
            </a>
        </div>
        <div>
            <a href="/editor/reportes">
                <button class="btn btn-warning bg-gradient-to-r from-warning to-warning-focus hover:bg-gradient-to-r hover:from-warning-focus hover:to-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
                    </svg>
                    Ver reportes
                </button>
            </a>
        </div>
        <div class="flex items-center bg-base-200 rounded-lg px-3 py-2 text-black">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                 class="bi bi-funnel text-primary" viewBox="0 0 16 16">
                <title>Filtrar</title>
                <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
            </svg>
            <select class="ms-2 select select-bordered select-sm focus:select-primary"
                    id="filtro"
                    name="filtro"
                    onchange="filtrar()">
                <option value="" selected disabled>Filtrar por</option>
                <option value="">Todas</option>
                <option value="activa">Activas</option>
                <option value="sugerida">Sugeridas</option>
                <option value="eliminada">Eliminadas</option>
            </select>
        </div>
    </aside>

    <div class="overflow-x-auto py-4">
        <table class="table mt-6 w-full bg-gray-700 id="editor-table">
            <thead>
            <tr>
                <th class="text-lg font-semibold bg-gray-700 text-white">Pregunta</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Estado</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {{#preguntas}}
                <tr class="hover:bg-gray-900">
                    <td class="p-2">{{pregunta}}</td>
                    <td class="p-2">
                        <span class="badge">
                            {{estado}}
                        </span>
                    </td>
                    <td class="p-2">
                        <div class="d-flex gap-2 flex items-center">
                            {{#mostrarActivar}}
                                <div>
                                    <a href="/editor/activar&id_pregunta={{id}}" class="btn btn-ghost btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-check-square text-success"
                                         style="width: 25px; height: 25px; cursor: pointer;" viewBox="0 0 16 16">
                                        <title>Activar</title>
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                        <path d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
                                    </svg>
                                    </a>
                                </div>
                            {{/mostrarActivar}}
                            {{#mostrarEliminar}}
                                <div>
                                    <a href="/editor/eliminar&id_pregunta={{id}}" class="btn btn-ghost btn-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-x-square text-error"
                                         style="width: 25px; height: 25px; cursor: pointer;" viewBox="0 0 16 16">
                                        <title>Eliminar</title>
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                                    </svg>
                                    </a>
                                </div>
                            {{/mostrarEliminar}}
                            <div>
                                <a href="/editor/preguntaDetalle&idPregunta={{id}}" class="btn btn-ghost btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-pencil-square text-primary"
                                     style="width: 25px; height: 25px; cursor: pointer;" viewBox="0 0 16 16">
                                    <title>Editar</title>
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd"
                                          d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                </svg>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            {{/preguntas}}
            {{^preguntas}}
                <tr>
                    <td colspan="3">
                        <div class="alert alert-info mt-5">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <span>No se encontraron preguntas</span>
                        </div>
                    </td>
                </tr>
            {{/preguntas}}
            </tbody>
        </table>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="../public/js/ajaxEditor.js"></script>