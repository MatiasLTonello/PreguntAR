<main class="d-flex justify-content-center align-items-center flex-fill">
    <section class="col-md-4 py-4">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>
        <form method="POST" action="/login/ingresarlogin">
            <div class="form-group mb-3">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Ingresa tu usuario" required>
            </div>
            <div class="form-group mb-3">
                <label for="contrasenia">Contraseña</label>
                <input type="password" class="form-control" id="contrasenia" name="contrasenia" placeholder="Ingresa tu contraseña" required>
            </div>
            <div class="d-grid gap-2 pt-2">
                <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
            </div>
        </form>
        <aside class="mt-3 text-center">
            <a href="/register" class="btn btn-link">¿No tienes cuenta? Regístrate aquí</a>
        </aside>
        {{#error}}
            <p class="mt-4 text-danger">{{error}}</p>
        {{/error}}
    </section>
</main>
