<script defer>
    document.title = `Login`;
</script>
<div class="flex justify-center items-center min-h-screen bg-gray-800 text-white">
    <section class="max-w-md w-full p-6 bg-gray-700 rounded-lg shadow-lg">
        <h2 class="text-center text-2xl font-bold mb-6">Iniciar Sesión</h2>
        <form method="POST" action="/login/ingresarlogin">
            <!-- Usuario -->
            <div class="form-control mb-4">
                <label for="usuario" class="label">
                    <span class="label-text text-white">Usuario</span>
                </label>
                <input type="text" id="usuario" name="usuario" placeholder="Ingresa tu usuario" required class="input input-bordered w-full bg-gray-800 text-white placeholder-gray-400">
            </div>

            <!-- Contraseña -->
            <div class="form-control mb-4">
                <label for="contrasenia" class="label">
                    <span class="label-text text-white">Contraseña</span>
                </label>
                <input type="password" id="contrasenia" name="contrasenia" placeholder="Ingresa tu contraseña" required class="input input-bordered w-full bg-gray-800 text-white placeholder-gray-400">
            </div>

            <!-- Botón Ingresar -->
            <div class="mt-6">
                <button type="submit" class="btn btn-primary w-full">Ingresar</button>
            </div>
        </form>

        <!-- Registro -->
        <aside class="mt-4 text-center">
            <a href="/register" class="text-sm text-blue-400 hover:underline">¿No tienes cuenta? Regístrate aquí</a>
        </aside>

        <!-- Mensaje de Error -->
        {{#error}}
            <p class="mt-4 text-red-500">{{error}}</p>
        {{/error}}
    </section>
</div>
