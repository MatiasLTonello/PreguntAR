<script defer>
    document.title = `Fin`;
</script>

<main class="container my-5">
    <!-- Mensaje de fin del juego -->
    <div class="alert alert-info text-center" role="alert">
        <h1 class="display-4">¡Respondiste todas las preguntas!</h1>
        <p class="fs-5">Ya no quedan más preguntas por responder. A continuación, podes ver tu historial de
            respuestas.</p>
    </div>

    <!-- Tabla de historial de preguntas -->
    <h2 class="text-center mb-4">Historial de Preguntas</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Pregunta</th>
                    <th>Resultado</th>
                </tr>
            </thead>
            <tbody>
                {{#historial}}
                <tr>
                    <td>{{pregunta}}</td>
                    <td>
                        {{#contesto_correctamente}}
                        <span class="badge bg-success">Correcta</span>
                        {{/contesto_correctamente}}
                        {{^contesto_correctamente}}
                        <span class="badge bg-danger">Incorrecta</span>
                        {{/contesto_correctamente}}
                    </td>
                </tr>
                {{/historial}}
            </tbody>
        </table>
    </div>

    <!-- Botones de acción -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="/" class="btn btn-secondary btn-lg">Volver al Menú Principal</a>
    </div>
</main>