<main class="container flex-fill max-w-7xl mx-auto px-4">
    <h1 class="text-3xl font-semibold text-center mt-4 mb-6">Reportes</h1>

    <aside class="my-5 flex items-center justify-end space-x-4">
        <div>
            <a href="/editor">
                <button class="btn btn-neutral bg-gradient-to-r from-neutral to-neutral-focus hover:bg-gradient-to-r hover:from-neutral-focus hover:to-neutral">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" />
                    </svg>
                    Panel de editor
                </button>
            </a>
        </div>
        <div>
            <a href="/pregunta">
                <button class="btn btn-primary bg-gradient-to-r from-primary to-primary-focus hover:bg-gradient-to-r hover:from-primary-focus hover:to-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                    </svg>
                    Nueva pregunta
                </button>
            </a>
        </div>
    </aside>

    <div class="overflow-x-auto">
        <table class="table mt-6 w-full bg-gray-700" id="editor-table">
            <thead>
            <tr>
                <th class="text-lg font-semibold bg-gray-700 text-white">ID</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Pregunta</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Usuario</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Motivo</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Fecha</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Revisado</th>
                <th class="text-lg font-semibold bg-gray-700 text-white">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {{#reportes}}
                <tr class="hover:bg-gray-900">
                    <td>{{id}}</td>
                    <td>{{pregunta}}</td>
                    <td>{{id_usuario}}</td>
                    <td>{{motivo}}</td>
                    <td>{{fecha_reporte}}</td>
                    <td>
                        {{#revisado}}
                            <span class="badge badge-success">Si</span>
                        {{/revisado}}
                        {{^revisado}}
                            <span class="badge badge-warning">No</span>
                        {{/revisado}}
                    </td>
                    <td>
                        <div class="flex gap-2">
                            <a href="/editor/preguntaDetalle&idPregunta={{id_pregunta}}"
                            class="btn btn-ghost btn-sm tooltip"
                            data-tip="Editar pregunta">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary"
                                 viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                            </svg>
                            </a>
                            <a href="/editor/marcarReporteComoLeido/?idReporte={{id}}"
                            class="btn btn-ghost btn-sm tooltip"
                            data-tip="Marcar como leÃ­da">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-success" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0"/>
                                <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z"/>
                            </svg>
                            </a>
                        </div>
                    </td>
                </tr>
            {{/reportes}}
            {{^reportes}}
                <tr>
                    <td colspan="7">
                        <div class="alert alert-info">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            <span>No se encontraron reportes</span>
                        </div>
                    </td>
                </tr>
            {{/reportes}}
            </tbody>
        </table>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="../public/js/ajaxEditor.js"></script>