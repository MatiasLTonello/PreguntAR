<script defer>
    document.title = `Registro`;
</script>
<main class="flex justify-center items-center min-h-screen text-white">
    <div class="max-w-lg w-full p-6 bg-gray-700 rounded-lg shadow-lg">
        <form action="/register/userRegistration" method="post" enctype="multipart/form-data">
            <h4 class="text-center text-success mb-4">{{ statusEmail }}</h4>

            <!-- Nombre Completo -->
            <div class="form-control mb-4">
                <label for="nombre-completo" class="label">
                    <span class="label-text text-white">Nombre Completo</span>
                </label>
                <input type="text" id="nombre-completo" name="nombre-completo" class="input input-bordered w-full bg-gray-800 text-white placeholder-gray-400">
                {{#errores.nombre-completo}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/errores.nombre-completo}}
            </div>

            <!-- Fecha de Nacimiento -->
            <div class="form-control mb-4">
                <label for="fecha-nacimiento" class="label">
                    <span class="label-text text-white">Fecha de Nacimiento</span>
                </label>
                <input type="date" id="fecha-nacimiento" name="fecha-nacimiento" class="input input-bordered w-full bg-gray-800 text-white">
                {{#errores.fecha-nacimiento}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/errores.fecha-nacimiento}}
            </div>

            <!-- Usuario -->
            <div class="form-control mb-4">
                <label for="username" class="label">
                    <span class="label-text text-white">Usuario</span>
                </label>
                <input type="text" id="username" name="username" class="input input-bordered w-full bg-gray-800 text-white">
                {{#errores.username}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/errores.username}}
            </div>

            <!-- Email -->
            <div class="form-control mb-4">
                <label for="email" class="label">
                    <span class="label-text text-white">Email</span>
                </label>
                <input type="email" id="email" name="email" class="input input-bordered w-full bg-gray-800 text-white">
                {{#errores.email}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/errores.email}}
            </div>

            <!-- Contraseña -->
            <div class="form-control mb-4">
                <label for="password" class="label">
                    <span class="label-text text-white">Contraseña</span>
                </label>
                <input type="password" id="password" name="password" class="input input-bordered w-full bg-gray-800 text-white">
                {{#errores.password}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/errores.password}}
            </div>

            <!-- Confirmar Contraseña -->
            <div class="form-control mb-4">
                <label for="confirm-password" class="label">
                    <span class="label-text text-white">Repetir Contraseña</span>
                </label>
                <input type="password" id="confirm-password" name="confirm-password" class="input input-bordered w-full bg-gray-800 text-white">
                {{#errores.confirm-password}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/errores.confirm-password}}
                {{#error}}
                    <div class="text-red-500 mt-1">{{.}}</div>
                {{/error}}
            </div>

            <!-- Ubicación -->
            <div class="form-control mb-4">
                <label for="ubicacion" class="label">
                    <span class="label-text text-white">Ubicación</span>
                </label>
                <select id="ubicacion" name="ubicacion" class="select select-bordered w-full bg-gray-800 text-white">
                    <option value="buenos aires">Buenos Aires</option>
                    <option value="catamarca">Catamarca</option>
                    <option value="chubut">Chubut</option>
                    <option value="córdoba">Córdoba</option>
                    <option value="corrientes">Corrientes</option>
                    <option value="entre rios">Entre Ríos</option>
                    <option value="formosa">Formosa</option>
                    <option value="jujuy">Jujuy</option>
                    <option value="la pampa">La Pampa</option>
                    <option value="la rioja">La Rioja</option>
                    <option value="mendoza">Mendoza</option>
                    <option value="misiones">Misiones</option>
                    <option value="neuquen">Neuquén</option>
                    <option value="rio negro">Río Negro</option>
                    <option value="salta">Salta</option>
                    <option value="san juan">San Juan</option>
                    <option value="san luis">San Luis</option>
                    <option value="santa cruz">Santa Cruz</option>
                    <option value="santa fe">Santa Fe</option>
                    <option value="santiago del estero">Santiago del Estero</option>
                    <option value="tierra del fuego">Tierra del Fuego</option>
                    <option value="tucuman">Tucumán</option>
                </select>
            </div>

            <!-- Foto -->
            <div class="form-control mb-4">
                <label for="foto" class="label">
                    <span class="label-text text-white">Foto</span>
                </label>
                <input type="file" id="foto" name="foto" class="input input-bordered w-full bg-gray-800 text-white" accept="image/*">
            </div>

            <!-- Sexo -->
            <div class="form-control mb-4">
                <label for="sexo" class="label">
                    <span class="label-text text-white">Sexo</span>
                </label>
                <select id="sexo" name="sexo" class="select select-bordered w-full bg-gray-800 text-white">
                    <option value="masculino">Masculino</option>
                    <option value="femenino">Femenino</option>
                    <option value="otro">Otro</option>
                </select>
            </div>

            <!-- Botón Registrarse -->
            <button type="submit" class="btn btn-primary w-full">Registrarse</button>
            <p class="text-center mt-4">¿Ya tenés una cuenta? <a href="/login" class="text-blue-400 hover:underline">Inicia sesión</a></p>
            {{#duplicado}}
                <p class="text-danger text-center mt-2">{{.}}</p>
            {{/duplicado}}
        </form>
    </div>
</main>
