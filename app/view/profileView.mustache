<main class="container my-5">
{{#miUser}}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 id="userName">Perfil de {{usuario}}</h3>
                </div>
                <div class="card-body">
